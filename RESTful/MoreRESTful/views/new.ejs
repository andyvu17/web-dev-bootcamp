<%include ./partials/header %>

<section class="container border border-dark rounded pb-3 pt-3 mt-4">
    <h1>Create New Cat</h1>
    <form action="/cats" method="POST">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" type="text" name="cat[name]" placeholder="name">
    </div>
    <div class="form-group">
        <label>Breed</label>
        <input class="form-control" type="text" name="cat[breed]" placeholder="breed">
    </div>
    <div class="form-group">
        <label>Image</label>
        <input class="form-control" type="text" name="cat[image]" placeholder="image">
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" name="cat[description]" required></textarea>
    </div>
    <button class="btn btn-primary">Submit</button>
</form>
</section>


<%include ./partials/footer %>